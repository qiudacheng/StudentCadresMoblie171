<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppendActivity">

    <TextView
        android:id="@+id/tv_append_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="添加学生干部信息"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_append_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="姓名："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_nublem"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_nublem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="学号："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_sex"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="性别："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_class"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_zhiwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="职务："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_phone"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="手机号码："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_home"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="所属组织："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_sushe"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_sushe"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="宿舍："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_append_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="班级："
        app:layout_constraintBottom_toTopOf="@+id/tv_append_zhiwu"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtTxt_append_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_nublem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_append_title" />

    <EditText
        android:id="@+id/edtTxt_append_nublem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/check_append_boy"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/check_append_boy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="男"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_class"
        app:layout_constraintEnd_toStartOf="@+id/check_append_girl" />

    <CheckBox
        android:id="@+id/check_append_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:text="女"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_class"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtTxt_append_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_zhiwu"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtTxt_append_zhiwu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_phone"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtTxt_append_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/check_append_stu"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/check_append_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="学生会"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_sushe"
        app:layout_constraintEnd_toStartOf="@+id/check_append_shetuan" />

    <CheckBox
        android:id="@+id/check_append_shetuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="社团"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_sushe"
        app:layout_constraintEnd_toStartOf="@+id/check_append_yishu" />

    <CheckBox
        android:id="@+id/check_append_yishu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:text="艺术团"
        app:layout_constraintBottom_toTopOf="@+id/edtTxt_append_sushe"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edtTxt_append_sushe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_append_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>